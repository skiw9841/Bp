<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="weather"
            type="com.example.bp.com.example.bp.model.Weather"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/gray"
        android:padding="1px"
        android:weightSum="12">
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="1px"
            android:text="@{weather.title}"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:weightSum="5"
            android:background="@color/white"
            android:layout_margin="1px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivIcon0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                app:bind_image="@{weather.consolidated_weather[0].iconUrl}"
                android:contentDescription="@string/icon0" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvName0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:text="@{weather.consolidated_weather[0].weather_state_name}"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvTemp0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:text="@{weather.consolidated_weather[0].formatTemp}"/>
                    <TextView
                        android:id="@+id/tvHumidity0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:text="@{weather.consolidated_weather[0].formatHumidity}"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:weightSum="5"
            android:background="@color/white"
            android:layout_margin="1px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivIcon1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:layout_margin="5dp"
                android:gravity="center"
                app:bind_image="@{weather.consolidated_weather[1].iconUrl}"
                android:contentDescription="@string/icon1" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvName1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:text="@{weather.consolidated_weather[1].weather_state_name}"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvTemp1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:text="@{weather.consolidated_weather[1].formatTemp}"/>
                    <TextView
                        android:id="@+id/tvHumidity1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:text="@{weather.consolidated_weather[1].formatHumidity}"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
